RM := rm -f
EXECUTABLE := jacobi

all: jacobi

OBJS :=  _variableDef.o _jacobi.o _main.o

_variableDef.o:
	$(PREP) $(FC) $(FFLAGS) -c -o $(@) $(@:.o=.F90)

_jacobi.o: _variableDef.o
	$(PREP) $(FC) $(FFLAGS) -c -o $(@) $(@:.o=.F90)

_main.o: _variableDef.o _jacobi.o
	$(PREP) $(FC) $(FFLAGS) -c -o $(@) $(@:.o=.F90)

$(OBJS2): $(OBJS)
	$(PREP) $(FC) $(FFLAGS) -c -o $(@) $(@:.o=.F90)

$(EXECUTABLE): $(OBJS) $(OBJS2)
	$(PREP) $(FC) $(FFLAGS) $(LDFLAGS) -o $(@) $(OBJS) $(OBJS2)

clean:
	-$(RM) $(OBJS) *.mod

distclean:
	-$(RM) $(OBJS) $(EXECUTABLE)
